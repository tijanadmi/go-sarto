{{template "base" .}}

{{define "content"}}
    <div class="container">
      <div class="row">
      <div class="col-md-3"></div>
        <div class="col-md-6" style="padding: 2%">
          <h1 class="mt-5">Search for Availability</h1>
          
          <br>
          <form action="/search-availability" method="post" novalidate class="needs-validation" autocomplete="off">
            <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">
            <div class="row">
              <div class="col">
                <div class="row" id="reservation-dates">
                  <div class="col-md-6">
                    <input required class="form-control" type="text" name="start" placeholder="Arrival date">
                  </div>
                  <div class="col-md-6">
                    <input required class="form-control" type="text" name="end" placeholder="Departure">  
                  </div>
                </div>
              </div>
            </div>
            <hr>
             <br>
              <button type="submit" class="btn btn-secondary">Search Availability</button>
              
            
          </form>
         
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
{{end}}

{{define "js"}}
<script>
    const elem = document.getElementById('reservation-dates');
    const rangepicker = new DateRangePicker(elem, {
    format:"dd.mm.yyyy",
    minDate: new Date(),
    });
</script>
{{end}}