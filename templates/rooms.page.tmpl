{{template "base" .}}

{{define "content"}}
    <div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive-sm">
                <table class="table table-striped section-rooms">
                    <thead>
                        <tr>
                            <th scope="col"> </th>
                            <th scope="col">Room Name</th>
                            <th scope="col" class="text-center">Number of guests</th>
                            <th scope="col" class="text-right">Price</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                    {{$rooms := index .Data "rooms"}}
                    {{range $rooms}}
                    
                        <tr>
                            <td><img src=.{{.RoomPictureFolder}} class="img-thumbnail"></td>
                            <td align="left"><strong>{{.RoomNameEn}}</strong><br>{{.RoomShortDescEn}}
                            <hr>
                            <span class="d-none d-md-inline-block">{{.RoomDescEn}}</span>
                            </td>
                            <td class="text-right">{{.RoomGuestNumber}}</td>
                            <td class="text-right">{{.RoomPriceEn}}  â‚¬</td>
                            <td class="text-right"><button type="submit" class="btn btn-secondary">Search Availability</button>
                            <br><br>
                            <a href="/detailsroom/{{.ID}}" class="btn btn-outline-secondary">More Detailes</a>
                             </td>
                        </tr>
                    {{end}}   
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{end}}